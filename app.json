{
  "expo": {
    "name": "VeraWorkerApp",
    "slug": "VeraWorkerApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "veraworkerapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.veralink.worker",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to record clock in/out locations for shift tracking.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to record clock in/out locations for shift tracking.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.veralink.worker"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow VeraWorkerApp to use your location to record clock in/out locations.",
          "locationAlwaysPermission": "Allow VeraWorkerApp to use your location to record clock in/out locations.",
          "locationWhenInUsePermission": "Allow VeraWorkerApp to use your location to record clock in/out locations."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1E3A8A",
          "dark": {
            "backgroundColor": "#1E3A8A"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "45c2c45a-57ad-495f-b20f-08a0fae226d6"
      }
    }
  }
}
